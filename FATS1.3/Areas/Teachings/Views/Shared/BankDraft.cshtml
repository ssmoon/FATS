@model FATS.Areas.Teachings.Models.V_BankDraft
 
<table class="table table-bordered table-condensed" cellspacing="8" style="margin: 20px 0px;">
    <tr>
        <td colspan="6">
            <div class="billtitle"><span class="bankname">@Model.PayeeBank</span>进账单</div>
        </td>
    </tr>
    <tr>
        <td colspan="6">
            @{ FATS.DataDefine.CommFunctions.FormatDateTimeToNormal(Model.DraftDate); }
        </td>
    </tr>
    <tr>
        <td class="titlecol">收款人</td>
        <td colspan="2">@Model.RemitterName</td>        
        <td class="titlecol">账号</td>        
        <td>@Model.RemitterAcc</td>
    </tr>    
    <tr>
        <td colspan="3" class="titlecol">
            出票金额<br />人民币(大写):
            @{  Html.RenderAction("CapitalMoney", "UICommon", new { area = string.Empty, money = Model.MoneyAmount }); }
        </td>
        <td colspan="3">
            ￥ @{ FATS.DataDefine.CommFunctions.FormatMoneyToString(Model.MoneyAmount) }
        </td>
    </tr>
    <tr>
        <td colspan="3" class="titlecol">
            实际结算金额<br />人民币(大写):
            @{  Html.RenderAction("CapitalMoney", "UICommon", new { area = string.Empty, money = Model.MoneyAmount }); }
        </td>
        <td colspan="3">
            @{  Html.RenderAction("TabledMoney", "UICommon", new { area = string.Empty, money = Model.MoneyAmount }); }
        </td>
    </tr>
    <tr>
        <td class="titlecol">申请人</td>
        <td colspan="2">@Model.PayeeName</td>
        <td class="titlecol">账号</td>
        <td colspan="2">@Model.PayeeAcc</td>
    </tr>    
    <tr>
        <td class="titlecol">出票行</td>
        <td>@Model.PayeeBank</td>
        <td class="titlecol">行号</td>
        <td>0001</td>
        <td colspan="2">&nbsp;</td>
    </tr>    
    <tr>    
        <td class="titlecol">备注</td>
        <td colspan="2">@Model.Purpose</td>
        <td colspan="3">&nbsp;</td>
    </tr>
</table>