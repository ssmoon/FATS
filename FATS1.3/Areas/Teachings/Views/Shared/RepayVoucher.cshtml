@model FATS.Areas.Teachings.Models.V_LoanVoucher

<table class="table table-bordered table-condensed" cellspacing="8" style="margin: 20px 0px;">
    <tr>
        <td colspan="6">
            <div class="billtitle"><span class="bankname">@Model.BankName</span>还贷凭证</div>
        </td>
    </tr>
    <tr>
        <td colspan="6">
            @{ FATS.DataDefine.CommFunctions.FormatDateTimeToNormal(Model.RepayDate); }
        </td>
    </tr>
    <tr>       
        <td class="titlecol">还款人</td>
        <td >@Model.ClientName</td>
        <td class="titlecol">借款人</td>
        <td >@Model.ClientName</td>        
    </tr>
    <tr>
        <td class="titlecol">存款户账号</td>
        <td>@Model.LoanAcc</td>
        <td class="titlecol">贷款户账号</td>
        <td>@Model.RepayAcc</td>
    </tr>
    <tr>
        <td class="titlecol">开户银行</td>
        <td>@Model.BankName</td>
        <td class="titlecol">开户银行</td>
        <td>@Model.BankName</td>
    </tr>
    <tr>
        <td class="titlecol">收款金额</td>
        <td colspan="3">@{ FATS.DataDefine.CommFunctions.FormatMoneyToString(Model.MoneyAmount); }</td>
    </tr>
    
</table>