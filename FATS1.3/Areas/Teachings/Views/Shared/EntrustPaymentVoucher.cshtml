@model FATS.Areas.Teachings.Models.V_EntrustPaymentVoucher
 
<table class="table table-bordered table-condensed" cellspacing="8" style="margin: 20px 0px;">
    <tr>
        <td colspan="6">
            <div class="billtitle"><span class="bankname">@Model.PayeeBank</span>托收凭证</div>
        </td>
    </tr>
    <tr>
        <td colspan="6">
           委托日期: @{ FATS.DataDefine.CommFunctions.FormatDateTimeToNormal(Model.ProxyDate); }
        </td>
    </tr>
    <tr>
        <td rowspan="3" class="titlecol">出票人</td>
        <td class="titlecol">全称</td>
        <td>@Model.PayeeName</td>
        <td rowspan="3" class="titlecol">收款人</td>
        <td class="titlecol">全称</td>
        <td>@Model.RemitterName</td>
    </tr>
    <tr>
        <td class="titlecol">账号</td>
        <td>@Model.PayeeAcc</td>
        <td class="titlecol">账号</td>
        <td>@Model.RemitterAcc</td>
    </tr>
    <tr>
        <td class="titlecol">开户银行</td>
        <td>@Model.PayeeBank</td>
        <td class="titlecol">开户银行</td>
        <td>@Model.RemitterBank</td>
    </tr>
    <tr>
        <td colspan="3" class="titlecol">
            金额<br />人民币(大写):
            @{  Html.RenderAction("CapitalMoney", "UICommon", new { area = string.Empty, money = Model.MoneyAmount }); }
        </td>
        <td colspan="3">
            @{  Html.RenderAction("TabledMoney", "UICommon", new { area = string.Empty, money = Model.MoneyAmount }); }
        </td>
    </tr>
    <tr>
        <td class="titlecol">款项内容</td>
        <td >@Model.Purpose</td>
        <td class="titlecol">托收凭据</td>
        <td>@Model.VoucherName</td>
        <td class="titlecol">附寄单证张数</td>
        <td>1</td>        
    </tr>
</table>