@{
    ViewBag.Title = "注册FATS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    <script type="text/javascript" src="@Url.Content("~/js/User/Register.js")"></script>
}

<div id="regarea">
    <h2>注册FATS</h2>
    <form class="form-inline">
        <div class="form-group">
            <label>邮箱</label>
            <input type="email" name="email" class="form-control" placeholder="邮箱将作为你的登录名" />
        </div>
        <div class="form-group">
            <label>学号</label>
            <input type="text" name="userCode" class="form-control" placeholder="学号是标明身份的凭据" />
        </div>
        <div class="form-group">
            <label>学校</label>
            <input type="text" name="school" class="form-control" placeholder="学号是标明身份的凭据" value="北京财会高等专科学习" />
        </div>
        <div class="form-group">
            <label>密码</label>
            <input type="password" name="password" class="form-control" placeholder="6-12位密码" />
        </div>
        <div class="form-group">
            <label>验证密码</label>
            <input type="password" class="form-control" placeholder="重复输入你的密码" />
        </div>
        <div class="form-group">
            <label>激活码</label>
            <input type="text" class="form-control" placeholder="输入你获得的激活码" maxlength="16" />
        </div>
        <button type="submit" class="btn btn-default">注册</button>
    </form>

</div>