@{
    ViewBag.Title = "注册FATS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    <script type="text/javascript" src="@Url.Content("~/js/User/Register.js")"></script>
}

<div id="regarea" class="userarea">
    <h2>注册FATS</h2>
    <form>        
        <div class="form-group">
            <label>登录名</label>
            <input type="text" name="UserCode" class="form-control" placeholder="可以使用学号作为用户名" />
        </div>
        <div class="form-group">
            <label>姓名</label>
            <input type="text" name="UserName" class="form-control" placeholder="可以使用学号作为用户名" />
        </div>
        <div class="form-group" style="display: none;">
            <label>学校</label>
            <input type="text" name="School" class="form-control" placeholder="" value="北京财会高等专科学校" />
        </div>
        <div class="form-group">
            <label>密码</label>
            <input type="password" name="Password" class="form-control" placeholder="6-12位密码" />
        </div>
        <div class="form-group">
            <label>验证密码</label>
            <input type="password" name="RepeatPwd" class="form-control" placeholder="重复输入你的密码" />
        </div>
        <div class="form-group">
            <label>激活码</label>
            <input type="text" name="ActivationCode"  class="form-control" placeholder="输入你获得的激活码" maxlength="16" />
        </div>
        <div class="alert alert-danger" role="alert"></div>
        <button data-act="reg" type="button" class="btn btn-primary">注册</button>
        <button data-act="gologin" type="button" class="btn btn-link">登录</button>
    </form>

</div>